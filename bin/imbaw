#!/usr/bin/env node

const process = require('process');
const spawn = require('child_process').spawn;
const chokidar = require('chokidar');

var filename = process.argv[2];
var child_process;
var started = 0;

function start() {
	console.log('\x1b[32m----------------------------\x1b[37m');
	started = Date.now();
	child_process = spawn('node', ['node_modules/imba/bin/imba',filename]);
	child_process.stdout.pipe(process.stdout);
	child_process.stderr.pipe(process.stderr);

	child_process.on('exit', function (code) {
		console.log('\x1b[32mDone in ' + (Date.now() - started) / 1000 + 's\x1b[37m');
		start();
	});
}

process.title = 'imbaw';

chokidar.watch('**/*.imba')
	.on('ready', () => {start()})
	.on('change', () => {if(child_process) {child_process.kill()} else {start()}});
